{
  "id": null,
  "title": "Flask Application Metrics (Custom)",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "graph",
      "title": "HTTP Requests per Second",
      "targets": [
        {
          "expr": "sum(rate(flask_http_request_total{job=\"flask\"}[1m]))",
          "legendFormat": "{{method}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "HTTP Request Duration (p95)",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(flask_http_request_duration_seconds_bucket{job=\"flask\"}[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Active Endpoints (Request Count)",
      "targets": [
        {
          "expr": "sum by (endpoint) (rate(flask_http_request_total{job=\"flask\"}[1m]))",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Error Rate (5xx)",
      "targets": [
        {
          "expr": "sum(rate(flask_http_request_total{job=\"flask\", status=~\"5..\"}[1m]))",
          "legendFormat": "5xx",
          "refId": "A"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}
